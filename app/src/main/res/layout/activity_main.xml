<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/gravity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="To'g'ri"
                android:textSize="30sp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="40dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp">
                <TextView
                    android:textSize="30sp"
                    android:id="@+id/txt_yutuqlar"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Noto'g'ri"
                android:textSize="30sp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="40dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/txt_yutuqsiz"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp"
        android:layout_width="300dp"
        android:layout_height="120dp">
        <TextView
            android:layout_marginEnd="60dp"
            android:layout_gravity="center"
            android:id="@+id/txt_number1"
            android:textSize="40sp"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:text="1"
            android:textSize="40sp" />
        <TextView
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:id="@+id/txt_amal"
            android:textSize="40sp"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="40sp"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="40sp"
            android:layout_marginStart="80dp"
            android:layout_gravity="center"
            android:text="?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/javob1_btn"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            app:cardCornerRadius="30dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:focusable="true">
            <TextView
                android:id="@+id/txt_javob1"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/javob2_btn"
            android:clickable="true"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:focusable="true">
            <TextView
                android:id="@+id/txt_javob2"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/javob3_btn"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            app:cardCornerRadius="30dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:focusable="true">
            <TextView
                android:id="@+id/txt_javob3"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/javob4_btn"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:focusable="true">
            <TextView
                android:id="@+id/txt_javob4"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>